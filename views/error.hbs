{{#if route}}
    <form id="close" action="/action?fp_cot={{connect_token}}" method="post" style="display: none">
        <input type="hidden" name="route" value="{{route}}">
        <input type="hidden" name="action" value="DISMISS_DIRECT">
    </form>
{{/if}}
<form id="back" action="/" method="post" style="display: none"></form>

<div class="viewport theme-failure">
    <div class="viewport__wrapper">
        <aside class="nav-controls">
            {{#if route}}
            <button type="submit" form="back" class="button--icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 32 32" fill="none"><circle cx="16" cy="16" r="16" fill="#F5F5F5"></circle><path fill="var(--color-icon-primary100)" d="M9.47 15.47a.75.75 0 0 0 0 1.06l4.773 4.773a.75.75 0 0 0 1.06-1.06L11.061 16l4.242-4.243a.75.75 0 0 0-1.06-1.06L9.47 15.47Zm.53 1.28h12v-1.5H10v1.5Z"></path></svg>
            </button>
            <button type="submit" form="close" class="button--icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 32 32" fill="none"><circle cx="16" cy="16" r="16" fill="#F5F5F5"></circle><path stroke="var(--color-icon-primary100)" stroke-width="1.5" d="m12 20 8-8M20 20l-8-8"></path></svg>
            </button>
           {{else}}
            <button type="submit" form="back" class="button--icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 32 32" fill="none"><circle cx="16" cy="16" r="16" fill="#F5F5F5"></circle><path fill="var(--color-icon-primary100)" d="M9.47 15.47a.75.75 0 0 0 0 1.06l4.773 4.773a.75.75 0 0 0 1.06-1.06L11.061 16l4.242-4.243a.75.75 0 0 0-1.06-1.06L9.47 15.47Zm.53 1.28h12v-1.5H10v1.5Z"></path></svg>
            </button>
            <button type="back" form="back" class="button--icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 32 32" fill="none"><circle cx="16" cy="16" r="16" fill="#F5F5F5"></circle><path stroke="var(--color-icon-primary100)" stroke-width="1.5" d="m12 20 8-8M20 20l-8-8"></path></svg>
            </button>
           {{/if}}
        </aside>
        <article class="content">
            <main class="main">
                <div class="main__wrapper">
                    <div class="main__heading">
                        <h1 class="title">Error</h1>
                    </div>
                    <p class="main__intro">
                        {{{error}}}<br/>
                        Please try again later.
                    </p>

                    <div class="main__icon-placeholder">
                        <svg xmlns="http://www.w3.org/2000/svg" width="83" height="75" fill="none"><path fill="#fff" fill-opacity="0.2" d="M11.633 74.71C4.993 74.71.969 70.103.969 64.126c0-1.836.469-3.71 1.523-5.469L32.805 5.844C34.797 2.289 38.313.492 41.906.492c3.594 0 7.07 1.797 9.102 5.352L81.32 58.656c.977 1.719 1.524 3.633 1.524 5.469 0 5.977-4.024 10.586-10.664 10.586H11.633Zm30.312-26.093c1.914 0 3.047-1.133 3.086-3.242l.586-21.21c.04-2.071-1.601-3.595-3.71-3.595-2.188 0-3.712 1.485-3.673 3.555l.508 21.25c.04 2.07 1.172 3.242 3.203 3.242Zm0 13.086c2.305 0 4.336-1.836 4.336-4.18 0-2.382-1.992-4.218-4.336-4.218-2.383 0-4.375 1.875-4.375 4.218 0 2.305 2.032 4.18 4.375 4.18Z"></path></svg>
                    </div>
                </div>
            </main>
            <footer class="footer">
                <button type="submit" form="back" class="button--primary">Back</button>
            </footer>
        </article>
    </div>
</div>


<script>
    document.querySelector('form#back').addEventListener('submit', (e) => {
        e.preventDefault();
        e.stopPropagation();
        history.back();
    });
</script>
